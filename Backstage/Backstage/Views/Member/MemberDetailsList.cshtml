@model IPagedList<Backstage.tMember>

@{
    ViewBag.Title = "MemberDetailsList";
}
@functions{
    public string getImageName(string path)
    {
        string result = "";
        if (path == null)
            return "暫無圖片";
        result = path.Split('/').Last();
        return result;
    }
}
<h2 style="border-bottom:3px solid #31708E;width:10vw">會員詳細表</h2>

<p>
    @Html.ActionLink("新增資料", "MemberCreate", "Member",null,new {
    Class = "btn btn-danger"
})
</p>
<table class="table table-hover">
    <thead class="thead-dark" style="background-color:#31708E;color:white;">
        <tr>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fId)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fAccount)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fPassword)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fName)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fBirthdate)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fMail)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fAddress)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fCity)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fCeilphoneNumber)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fCoins)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fIntroduction)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fAccountTypeId)
            </th>
            <th style="font-size:large">
                @Html.DisplayNameFor(model => model.FirstOrDefault().fPhotoPath)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fAccount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fPassword)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fBirthdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fCeilphoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fCoins)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fIntroduction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fAccountTypeId)
                </td>
                <td>
                    @getImageName(item.fPhotoPath)

                </td>

                <td>
                    @Html.ActionLink("修改", "MemberDetailEdit", "Member", new { id = item.fId }, new
               {
                   Class = "btn btn-info"
               })

                </td>

            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("MemberDetailsList", new { page }))
