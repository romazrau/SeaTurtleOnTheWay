@model IEnumerable<Backstage.tActivityLabel>

@{
    ViewBag.Title = "TagList";
}

<h2>新增標籤</h2>

@using (Html.BeginForm())
{
    <input type="text" id="txtKeyword" name="txtKeyword" />

    <input type="submit" value="查詢" class="btn btn-primary" />
}

<span>新增標籤名稱</span>
<span><input type="text" id="txtNewTag" name="txtNewTag" /></span>
<span><input type="button" value="送出" onclick="AddTag()" class="btn btn-secondary" /></span>
<span>@Html.ActionLink("回到標籤清單", "TagList")</span>

<table class="table table-borderless">
