@using Backstage.Models;
@{
    ViewBag.Title = "ayout";

    tMember cust = Session[cDictionary.SK_Member] as tMember;
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/bundles/jqueryval"></script>
    <script src="~/Scripts/chat/exporting.js"></script>
    <script src="~/Scripts/chat/highcharts.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


    <style>
        nav {
            position: fixed;
            width: 8vw;
            height: 100%;
            top: 8rem;
        }

        .navbar {
            height: 6rem;
            border: 0;
        }
        .table {
            white-space: normal;
            word-wrap: break-word;
            word-break: break-all;
        }
        .navbar-brand {
            border-radius: 4px;
            color: black;
            cursor: pointer;
            padding: 15px 20px;
            font-size: 18px;
            font-weight: 400;
            line-height: 22px;
            margin-right: 30px;
            margin-bottom: 3rem
        }

        td {
            max-width: 300px;
        }

        .title {
            font-size: 4rem;
        }

        jump {
            background-color: #9CABF3;
            box-shadow: 0 8px 15px rgba(0,0,0,.1);
            transition: all .3s ease 0s;
        }

        .jump:hover {
            background-color: #e3f2fd;
            border-radius: 4px;
            transform: translateY(-4px);
            color: black;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#e3f2fd">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h2>後臺管理</h2>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <nav>
        <div class="BackStage_ManageBox">

            <div><a class="navbar-brand jump" href="/Member/List">會員</a></div>
            <div><a class="navbar-brand jump" href="/Activity/ActivityList">活動</a></div>
            <div><a class="navbar-brand jump" href="/Tag/TagList">標籤</a></div>
            <div><a class="navbar-brand jump" href="/Community/CommunityList">社團</a></div>
            <div><a class="navbar-brand jump" href="/Post/List">文章</a></div>
            <div><a class="navbar-brand jump" href="/Login/Home">統計</a></div>
        </div>




    </nav>


    <div class="container body-content">




        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


</body>
</html>