<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        nav {
            position: fixed;
            width: 8vw;
            height: 100%;
            top: 6rem;
        }
        .navbar {
        height:6rem;
        
        }
        .navbar-brand {
            width: 100%;
            font-size:3rem;
            margin-bottom:1rem;
            text-align:center;
        }
        td {
               max-width:300px;
        }

        .title {
            font-size: 4rem;
            
        }



    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"  style="background-color:#e3f2fd" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h2>後臺管理</h2>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <nav>
        <div>@Html.ActionLink("會員", "List", "Member", new { area = "" }, new { @class = "navbar-brand" })</div>
        <div>@Html.ActionLink("活動", "ActivityList", "Activity", new { area = "" }, new { @class = "navbar-brand" })</div>
        <div>@Html.ActionLink("標籤", "TagList", "Tag", new { area = "" }, new { @class = "navbar-brand" })</div>
        <div>@Html.ActionLink("社團", "CommunityList", "Community", new { area = "" }, new { @class = "navbar-brand" })</div>

        
        
       
        
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>